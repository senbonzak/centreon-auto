# Configuration de l'API Centreon
CENTREON_API_URL=https://your-centreon-api
CENTREON_LOGIN=your-username
CENTREON_PASSWORD=votre-password

# Paramètres de l'application
ALERT_LIMIT=100

# Configuration des fichiers de sortie
OUTPUT_DIR=output
OUTPUT_FILE=output/alerts_output.json

# Configuration des logs
LOG_DIR=logs
LOG_LEVEL=INFO
API_TIMEOUT=90

# Dashboard Configuration (new)
FLASK_SECRET_KEY=centreon-dashboard-secret-key-change-in-production-2025
FLASK_PORT=5000
FLASK_DEBUG=False
DATABASE_URL=sqlite:///centreon_dashboard.db

# ===============================================
# CONFIGURATION EMAIL
# ===============================================

# Mode RELAI LOCAL (recommandé si relai configuré sur le serveur)
# Ne pas renseigner EMAIL_PASSWORD pour utiliser le relai local
# SMTP_SERVER=localhost
# SMTP_PORT=25
# EMAIL_SENDER=centreon@votre-domaine.com

# Mode SMTP EXTERNE (si pas de relai local)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_SENDER=monitoring@votre-domaine.com
# EMAIL_PASSWORD=votre-mot-de-passe-app

# Configuration SQUARE (OBLIGATOIRE)
SQUARE_EMAIL_RECIPIENTS=admin@exemple.com,team-square@exemple.com

# Destinataires en copie (CC) - optionnel
SQUARE_EMAIL_CC=manager@exemple.com,supervisor@exemple.com

# Destinataires en copie cachée (BCC) - optionnel  
SQUARE_EMAIL_BCC=audit@exemple.com,backup-team@exemple.com

